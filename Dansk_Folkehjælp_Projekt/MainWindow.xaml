<Window x:Class="Dansk_Folkehjælp_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dansk_Folkehjælp_Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Kolonner laves-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Rækker laves-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Background="Aqua" Width="800" Height="450" Grid.ColumnSpan="5" Grid.RowSpan="8"></TextBox>
        
        <!--Første kolonne gøres grøn-->
        <DockPanel Background="ForestGreen"  Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="1" HorizontalAlignment="Left" >
            
            <!--De forskellige overskrifter og knapper-->
            <StackPanel  Margin="0,0,0,0" Width="200">
                <Label Grid.Row="0" Content="Oversigt" HorizontalAlignment="Center" FontWeight="Bold" Background="Transparent"/>

                <Button Grid.Row="1" x:Name="bt_Find" Content="Søg" Click="bt_Find_Click" Margin=" 0,0,0,5" Background="Orange"  />

                <Label Grid.Row="2" Grid.Column="0" Content="Overskrift" HorizontalContentAlignment="Center" Margin=" 0,0,0,5" Background="Orange"/>
                <Button Grid.Row="3" Grid.Column="0" x:Name="bt_midlertidig" Content=" Tryk her" HorizontalContentAlignment=" Center" Margin=" 0,0,0,5" Background="Orange"/>

                <Label Grid.Row="4" Content="Overskrift" HorizontalContentAlignment="Center" FontWeight="Bold" Margin=" 0,0,0,5" Background="Orange"/>

                <Button Grid.Row="5" Grid.Column="0" x:Name="bt_AddInstructor" Content="Ny genstand" Margin=" 0,0,0,5" Background="Orange"/>
                <Button Grid.Row="6" Grid.Column="0" x:Name="bt_AllInstructors" Content="Ny Reol" Margin=" 0,0,0,5" Background="Orange"/>

            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
