<Window x:Class="Dansk_Folkehjælp_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dansk_Folkehjælp_Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Background="BlanchedAlmond"  Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" >
            <StackPanel>
                <Label Content="Oversigt" HorizontalAlignment="Center" FontWeight="Bold" />
                <Button x:Name="bt_Find" Content="Søg" Click="bt_Find_Click"    />

                <Label Content="" />
                <Label Content="//" HorizontalAlignment="Center" FontWeight="Bold" />
                <Button x:Name="bt_AddInstructor" Content="//"  />
                <Button x:Name="bt_AllInstructors" Content="//"  />


            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
